<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.SelectProfileActivity"
    android:background="@color/black">
    
    <ImageView
        android:id="@+id/label"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_netflix_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/selectUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_select_user"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label"
        android:layout_marginTop="60dp"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/profile_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_profile_1"
        app:layout_constraintTop_toBottomOf="@+id/selectUser"
        app:layout_constraintEnd_toStartOf="@+id/guide"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leonardo"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_1"
        app:layout_constraintStart_toStartOf="@+id/profile_1"
        app:layout_constraintTop_toBottomOf="@id/profile_1"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/profile_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_profile_2"
        app:layout_constraintTop_toBottomOf="@+id/selectUser"
        app:layout_constraintStart_toEndOf="@+id/guide"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paulo"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_2"
        app:layout_constraintStart_toStartOf="@+id/profile_2"
        app:layout_constraintTop_toBottomOf="@id/profile_2"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/profile_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_profile_3"
        app:layout_constraintTop_toBottomOf="@+id/profile_1"
        app:layout_constraintEnd_toStartOf="@+id/guide"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silvana"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_3"
        app:layout_constraintStart_toStartOf="@+id/profile_3"
        app:layout_constraintTop_toBottomOf="@id/profile_3"
        android:layout_marginTop="4dp"/>


    <ImageView
        android:id="@+id/profile_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_profile_4"
        app:layout_constraintTop_toBottomOf="@+id/profile_2"
        app:layout_constraintStart_toEndOf="@+id/guide"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camila"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_4"
        app:layout_constraintStart_toStartOf="@+id/profile_4"
        app:layout_constraintTop_toBottomOf="@id/profile_4"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>